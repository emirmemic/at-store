{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "orderStatus": {
      "type": "enumeration",
      "enum": ["pending", "canceled", "completed"],
      "required": false,
      "default": "pending"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "orders"
    },
    "orderNumber": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "deliveryMethod": {
      "type": "enumeration",
      "enum": ["pickup", "delivery"],
      "required": true
    },
    "paymentMethod": {
      "type": "enumeration",
      "enum": ["card", "cash", "virman"],
      "required": true
    },
    "items": {
      "type": "component",
      "repeatable": true,
      "component": "global.cart-item",
      "required": true
    },
    "selectedStore": {
      "type": "string"
    },
    "address": {
      "type": "json"
    },
    "products": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product",
      "inversedBy": "orders"
    },
    "publicToken": {
      "type": "string",
      "unique": true
    },
    "isGift": {
      "type": "boolean"
    },
    "totalPrice": {
      "type": "decimal"
    },
    "deliveryPrice": {
      "type": "decimal"
    }
  }
}
