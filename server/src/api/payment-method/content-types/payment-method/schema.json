{
  "kind": "collectionType",
  "collectionName": "payment_methods",
  "info": {
    "singularName": "payment-method",
    "pluralName": "payment-methods",
    "displayName": "Payment Method",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "cardNumber": {
      "type": "string",
      "regex": "^(?:4[0-9]{12}(?:[0-9]{3})?|4026[0-9]{12}|417500[0-9]{10}|4508[0-9]{12}|4844[0-9]{12}|4913[0-9]{12}|4917[0-9]{12}|5[1-5][0-9]{14}|5018[0-9]{12}|5020[0-9]{12}|5038[0-9]{12}|6304[0-9]{12}|6759[0-9]{12}|6761[0-9]{12}|6763[0-9]{12})$",
      "required": true,
      "unique": false
    },
    "expirationDate": {
      "type": "string",
      "regex": "^(0[1-9]|1[0-2])\\/[0-9]{2}$",
      "default": "date",
      "required": true
    },
    "nameAndSurname": {
      "type": "string",
      "regex": "^[A-Z][a-z]+(?:\\s[A-Z][a-z]+)+$",
      "required": true
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "payment_methods"
    },
    "isDefault": {
      "type": "boolean",
      "default": false
    }
  }
}
